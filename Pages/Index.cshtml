@page
@model IndexModel
@{
    ViewData["Title"] = "";
}
<section id="carousel-container" class="container">
   

    <!--        carousel-->
    <div id="recentworks" class="carousel slide" data-ride="carousel">

        <!-- Indicators -->
        <ul class="carousel-indicators">
            <li data-target="#recentworks" data-slide-to="0" class="active"></li>
            <li data-target="#recentworks" data-slide-to="1"></li>
            <li data-target="#recentworks" data-slide-to="2"></li>
        </ul>

        <!-- The slideshow -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/img/1.jpg" alt="" width="1100" height="250">
            </div>
            <div class="carousel-item">
                <img src="~/img/2.jpg" alt="" width="1100" height="250">
            </div>
            <div class="carousel-item">
                <img src="~/img/3.jpg" alt="" width="1100" height="250">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="carousel-control-prev" href="#recentworks" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#recentworks" data-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>
    </div>
</section>

<!-- suppler section-->
